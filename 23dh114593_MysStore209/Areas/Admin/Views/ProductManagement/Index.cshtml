@model IEnumerable<_23dh114593_MysStore209.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>Danh sách sản phẩm</h2>
    <a href="@Url.Action("Create", "ProductManagement", new { area = "Admin" })" class="btn btn-success mb-3">Thêm sản phẩm mới</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
               
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var product in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductDecription</td>
                        <td>@String.Format("{0:C0}", product.ProductPrice)</td>
                        <td>
                            <img src="@product.ProductImage" alt="@product.ProductName" style="width: 100px; height: auto;" />
                        </td>
                  
                        <td>
                            <a href="@Url.Action("Edit", "ProductManagement", new { id = product.ProductID, area = "Admin" })" class="btn btn-primary btn-sm">Sửa</a>

                            <a href="@Url.Action("Delete", "ProductManagement", new { id = product.ProductID })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">Xóa</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có sản phẩm nào.</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
