@{

    ViewBag.Title = "Đặt hàng thành công";
}
@{ Layout = "~/Views/Shared/Navbar.cshtml"; }
<style>
    .about-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 300px;
        background-image: url('https://themewagon.github.io/restoran/img/bg-hero.jpg'); /* Thay 'background.jpg' bằng đường dẫn ảnh nền của bạn */
        background-size: cover;
        background-position: center;
        color: #fff;
        text-align: center;
        position: relative;
    }

        .about-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Lớp phủ tối để nổi bật văn bản */
            z-index: 1;
        }

        .about-header h1 {
            font-size: 48px;
            font-weight: bold;
            z-index: 2;
            position: relative;
        }

    .breadcrumb {
        margin-top: 10px;
        font-size: 16px;
        z-index: 2;
        position: relative;
    }

        .breadcrumb a {
            color: #FEA116;
            text-decoration: none;
        }

            .breadcrumb a:hover {
                text-decoration: underline;
            }

        .breadcrumb span {
            color: #ffffff;
        }
    /* Confirmation Section */
    div[style*="text-align: center"] {
        margin-top: 50px;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

        div[style*="text-align: center"] h1 {
            font-size: 32px;
            font-weight: bold;
            color: #28a745; /* Màu xanh lá biểu tượng của sự thành công */
            margin-bottom: 20px;
        }

        div[style*="text-align: center"] p {
            font-size: 18px;
            color: #555;
            margin-bottom: 20px;
        }

        div[style*="text-align: center"] a.btn-primary {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff; /* Màu xanh chủ đạo */
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            div[style*="text-align: center"] a.btn-primary:hover {
                background-color: #0056b3;
            }
</style>
<main aria-labelledby="title">
    <section class="about-header">
        <h1>ĐẶT HÀNG THÀNH CÔNG!</h1>
        <div class="breadcrumb">
            <a href="#">Trang Chủ</a> / <a href="#">Pages</a> / <span>ĐẶT HÀNG</span>
        </div>
    </section>
</main>
<div style="text-align: center; margin-top: 50px;">
    <h1>Cảm ơn bạn đã đặt hàng!</h1>
    <p>Đơn hàng của bạn đã được xác nhận và đang được xử lý.</p>
    <p>Bạn có thể kiểm tra chi tiết đơn hàng tại <a href="@Url.Action("Orders", "Account")">đây</a>.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua sắm</a>
</div>
