        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="menu-item">
                    <img src="@product.ProductImage" alt="@product.ProductName" class="product-image" />
                    <p>@product.ProductDecription</p>
                    <p>@product.ProductName<br><strong>@String.Format("{0:C0}", product.ProductPrice)</strong></p>
                    <button class="btn btn-primary" onclick="addToCart(@product.ProductID)">Đặt món</button>
                </div>
            }
        }
        else
        {
            <p>Hiện tại chưa có sản phẩm nào.</p>
        }
    </div>
</section>



