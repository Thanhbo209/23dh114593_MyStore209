@model _23dh114593_MysStore209.Models.Customer

@{
    Layout = null;
    var products = ViewBag.Products as List<_23dh114593_MysStore209.Models.Product>;

}
<style>
    .about-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 300px;
        background-image: url('https://themewagon.github.io/restoran/img/bg-hero.jpg'); /* Thay 'background.jpg' bằng đường dẫn ảnh nền của bạn */
        background-size: cover;
        background-position: center;
        color: #fff;
        text-align: center;
        position: relative;
    }

        .about-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Lớp phủ tối để nổi bật văn bản */
            z-index: 1;
        }

        .about-header h1 {
            font-size: 48px;
            font-weight: bold;
            z-index: 2;
            position: relative;
        }

    .breadcrumb {
        margin-top: 10px;
        font-size: 16px;
        z-index: 2;
        position: relative;
    }

        .breadcrumb a {
            color: #FEA116;
            text-decoration: none;
        }

            .breadcrumb a:hover {
                text-decoration: underline;
            }

        .breadcrumb span {
            color: #ffffff;
        }

    /* Table */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        table th, table td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #FEA116;
            color: #fff;
            font-weight: bold;
        }

        table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tbody tr:hover {
            background-color: #f5f5f5;
        }

    /* Form */
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 16px;
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    textarea {
        resize: none;
    }

    button.btn-success {
        background-color: #28a745;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        display: block;
        margin: 20px 0;
    }

        button.btn-success:hover {
            background-color: #218838;
        }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <main aria-labelledby="title">
        <section class="about-header">
            <h1>Giỏ Hàng</h1>
            <div class="breadcrumb">
                <a href="#">Trang Chủ</a> / <a href="#">Pages</a> / <span>Giỏ Hàng</span>
            </div>
        </section>
    </main>
    <h2>Xác nhận đơn hàng</h2>

    <form method="post" action="@Url.Action("PlaceOrder", "Home")">
        <div class="form-group">
            <label>Tên khách hàng:</label>
            <input type="text" class="form-control" value="@Model.CustomerName" disabled />
        </div>
        <div class="form-group">
            <label>Địa chỉ giao hàng:</label>
            <input type="text" name="address" class="form-control" value="@Model.CustomerAddress" required />
        </div>
        <div class="form-group">
            <label>Số điện thoại:</label>
            <input type="text" name="phone" class="form-control" value="@Model.CustomerPhone" required />
        </div>

        <h4>Danh sách sản phẩm</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên món ăn</th>
                    <th>Miêu tả</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @if (products != null && products.Any())
                {
                    int index = 1;
                    foreach (var product in products)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductDecription</td>
                            <td>@String.Format("{0:C0}", product.ProductPrice)</td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Không có sản phẩm nào trong đơn hàng.</td>
                    </tr>
                }
            </tbody>
        </table>



        <form method="post" action="@Url.Action("PlaceOrder", "Home")">
            <div class="form-group">
                <label>Địa chỉ giao hàng:</label>
                <textarea id="AddressDelivery" name="address" rows="3" required>@Model.CustomerAddress</textarea>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="text" name="phone" class="form-control" value="@Model.CustomerPhone" required />
            </div>
            <button type="submit" class="btn btn-success">Đặt hàng</button>
        </form>
</body>
</html>
